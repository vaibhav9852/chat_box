generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  messages  message[]
  @@map("user")
} 

model message {
  id          String @id @default(uuid())
  chat        String
  senderId    String 
  reciverId   String
  author      user   @relation(fields: [userId], references: [id])
  userId       String
}

